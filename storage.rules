rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Función para obtener rol de usuario (requiere Firestore)
    function getUserRole() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role;
    }

    // Reglas para comprobantes de depósitos
    match /receipts/deposits/{userId}/{depositId}/{fileName} {
      // El dueño puede leer y escribir su comprobante
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admin y finance pueden leer cualquier comprobante
      allow read: if request.auth != null && getUserRole() in ['ADMIN', 'FINANCE'];
    }
  }
}
