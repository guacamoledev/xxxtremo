rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Función para obtener rol de usuario (requiere Firestore)
    function getUserRole() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role;
    }

    // Reglas para comprobantes de depósitos
    match /receipts/deposits/{userId}/{depositId}/{fileName} {
      // El dueño, admin y finance pueden leer y escribir comprobantes
  allow read, write: if request.auth != null && (request.auth.uid == userId || getUserRole() in ['admin', 'finance']);
    }
  }
}
